//2задание

#include <iostream>
#include <fstream>
#include <string.h>
using namespace std;

int main()
{
    cout <<"Введите строку: ";
    char a[100];
    cin >> a;
    char *p;
    p=a;
        for (int b=0; b<strlen(a); b++){
        cout<< *(p+b+1);
    }

return 0;
}
